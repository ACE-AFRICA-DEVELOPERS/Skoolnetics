include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    .card-header
                                        h5 Add a new Staff
                                        span.d-block.m-t-5 #[strong Note :] The Last name of the staff will be the default password in Capslock. Staff ID will be automatically generated.
                                    .card-body
                                        .row
                                            .col-md-6
                                                if error
                                                    if error.length != 0
                                                        .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                                                            button.close(type="button" data-dismiss="alert" aria-label="close")
                                                                span(aria-hidden="true") Ã—
                                                            span #{error}
                                        .row.justify-content-center
                                            .col-md-8
                                                .form-field
                                                    form(method="POST")
                                                        div(class="row ")
                                                            div(class="col-md-6")
                                                                label(class="label") First Name :
                                                                input(type="text" class="form-control mb-3" name="firstName" required)
                                                            div(class="col-md-6")
                                                                label(class="label") Last Name :
                                                                input(type="text" class="form-control mb-3" name="lastName" required)
                                                            div(class="col-md-6")
                                                                label(class="label") Other Name :
                                                                input(type="text" class="form-control mb-3" name="otherName" required)
                                                            div(class="col-md-6")
                                                                label(class="label") Email :
                                                                input(type="email" class="form-control mb-3" name="email" required)
                                                            div(class="col-md-6")
                                                                label(class="label") Mobile Number :
                                                                input(type="tel" class="form-control mb-3" name="number" required)
                                                            div(class="col-md-6")
                                                                label(class="label") Gender :
                                                                select(class="form-control custom-select mb-3" name="gender" required)
                                                                    option(value="" selected disabled="disabled") ---------
                                                                    option(value="male") Male
                                                                    option(value="female") Female
                                                            div(class="col-md-6")
                                                                label(class="label") Role :
                                                                select(class="form-control custom-select mb-3" name="role" required id="role")
                                                                    option(value="" selected disabled="disabled") ---------
                                                                    option(value="Teacher") Teacher
                                                                    each role in roles
                                                                        option(value=role.role) #{role.name}

                                                            div(class="col-lg-6")
                                                                label(for="subjects" class="label") Class teacher :
                                                                select(class="form-control mb-3 custom-select" name="classHead" id="classHead")
                                                                    option(value="" selected disabled="disabled") ---------
                                                                    each classN in className
                                                                        option(value=classN._id) #{classN.name}
                                                                p.err-msg
                                                            
                                                        div(class="text-center")
                                                            button(type="submit" id="submit" class="btn btn-info") Continue
                                                

                    
        script(src="/javascripts/library/confirm.js" type="module")
        include includes/footer.pug