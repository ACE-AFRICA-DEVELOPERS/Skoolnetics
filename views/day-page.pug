include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .row
                                    .col-md-6
                                        if success
                                            if success.length != 0
                                                .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                    button.close(type="button" data-dismiss="alert" aria-label="close")
                                                        span(aria-hidden="true") Ã—
                                                    span #{success}
                                p #[a(href="#" data-toggle="modal" data-target="#add-period" class="btn btn-info") New Weekday #[i(class="fa fa-plus ml-1")]]
                                div(id="add-period" class="modal fade")
                                    div(class="modal-dialog" role="document")
                                        div(class="modal-content")
                                            div(class="modal-header")
                                                h4(class="modal-title") Add a Weekday
                                                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                                    span(aria-hidden="true") &times;
                                            div(class="modal-body")
                                                form(method="POST")
                                                    label(class="label") Day: 
                                                    input(type="text" class="form-control mb-2" name="weekday")
                                                    
                                                    div(class="text-center")
                                                        button(type="submit" class="btn main-btn") Create

                                if days
                                    .card
                                        .card-header
                                            h5 School Periods
                                        .card-block.table-border-style
                                            .table-responsive
                                                table.table.table-striped
                                                    thead.thead-light 
                                                        tr 
                                                            th.text-center S/N
                                                            th.text-center Weekday
                                                            th.text-center Delete
                                                    tbody 
                                                        - let i = 0
                                                        each day, index in days
                                                            - let delUrl = "/school/day/" + day._id + '/delete'
                                                            - let weekday = day.weekday
                                                            tr
                                                                td.text-center #{++i}  
                                                                td.text-center #{weekday}
                                                                td.text-center
                                                                    a(href=delUrl class="main-link")
                                                                        i(class="fa fa-trash")
                                else 
                                    p No Day created.
                                
                        a(href="/school/period" class="btn btn-info mt-5")
                            i(class="fa fa-arrow-left ml-1 text-white")
                                span.ml-2 Back



        include includes/footer.pug