include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    .card-body
                                        if lessonNotes
                                            .card-block.table-border-style
                                                .table-responsive
                                                    table.table.table-striped
                                                        thead.thead-light
                                                            tr
                                                                th Staff
                                                                th Subject
                                                                th Week
                                                                th View
                                                        tbody
                                                            each lessonNote in lessonNotes
                                                                -let singleLessonNote = '/student/lesson-notes/' + lessonNote._id
                                                                tr
                                                                    td #{staffName[lessonNote.staff]}
                                                                    td #{lessonNote.subject}
                                                                    td #{lessonNote.week}
                                                                    td #[a(href=singleLessonNote class="main-link") view]

                                        else
                                            p.text-small #{noNote}
        include includes/footer.pug