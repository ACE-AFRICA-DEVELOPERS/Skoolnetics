include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                div
                                    p #[a(href="#" data-toggle="modal" data-target="#add-term" class="btn btn-info") New Term #[i(class="fa fa-plus ml-1")]]
                                    div(id="add-term" class="modal fade")
                                        div(class="modal-dialog" role="document")
                                            div(class="modal-content")
                                                div(class="modal-header")
                                                    h4(class="modal-title") Add a Term
                                                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                                        span(aria-hidden="true") &times;
                                                div(class="modal-body")
                                                    form(method="POST")
                                                        label(class="label") Name: 
                                                        input(type="text" class="form-control mb-2" name="name" placeholder="(E.G : First Term)")
                                                        label(class="label") Start: 
                                                        input(type="date" class="form-control mb-2" name="startDate" placeholder="Start Date")
                                                        label(class="label") End:
                                                        input(type="date" class="form-control mb-2" name="endDate" placeholder="End Date")
                                                        div(class="text-center")
                                                            button(type="submit" class="btn btn-info") Create
                                    .col-xl-12
                                        .card
                                            if term.length > 0
                                                .card-header
                                                    h5 Term
                                                    span.d-block.m-t-5
                                                    | On the 
                                                    code current
                                                    |  tab, click on 'make current' to choose your current term.
                                                .card-block.table-border-style
                                                    .table-responsive
                                                        table.table.table-striped
                                                            thead
                                                                tr
                                                                    th Term
                                                                    th Start Date
                                                                    th End Date
                                                                    th Current
                                                            tbody 
                                                                each sess in term
                                                                    - let name = sess.name
                                                                    - let startDateYear = sess.startDate.getFullYear()
                                                                    - let startDateMonth = sess.startDate.getMonth() + 1
                                                                    - let startDateDay = sess.startDate.getDate()
                                                                    - let endDateDay = sess.endDate.getDate()
                                                                    - let endDateMonth = sess.endDate.getMonth() + 1
                                                                    - let endDateYear = sess.endDate.getFullYear()
                                                                    - let deleteUrl = "#"
                                                                    tr  
                                                                        td #{name}
                                                                        td #{startDateDay}/#{startDateMonth}/#{startDateYear}
                                                                        td #{endDateDay}/#{endDateMonth}/#{endDateYear}
                                                                        if sess.current
                                                                            td Yes
                                                                        else
                                                                            - let currentUrl = "/school/session/" + session._id + "/current/" + sess._id
                                                                            td #[a(href=currentUrl class="ace-btn") Make Current]
                                            else
                                                .card-header
                                                    h5 Term
                                                    span.d-block.m-t-5 No term has been created. 

        include includes/footer.pug