include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .row
                                    .col-md-6
                                        if success
                                            if success.length != 0
                                                .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                    button.close(type="button" data-dismiss="alert" aria-label="close")
                                                        span(aria-hidden="true") Ã—
                                                    span #{success}
       
                                p #[a(href="#" data-toggle="modal" data-target="#add-admin" class="btn btn-info") New Admin #[i(class="fa fa-plus ml-1")]]
                                div(id="add-admin" class="modal fade")
                                    div(class="modal-dialog" role="document")
                                        div(class="modal-content")
                                            div(class="modal-header")
                                                h4(class="modal-title") Add an Admin
                                                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                                    span(aria-hidden="true") &times;
                                            div(class="modal-body")
                                                form(method="POST")
                                                    label Username: 
                                                    input(type="text" class="form-control mb-3" name="username" required)
                                                    label Email: 
                                                    input(type="email" class="form-control mb-3" name="email" required)
                                                    div(class="text-center")
                                                        button(type="submit" class="btn btn-info") Create
                                    
                                if allAdmins.length > 1
                                    .card
                                        .card-header
                                            h5 Admins
                                        .card-block.table-border-style
                                            .table-responsive
                                                table.table.table-striped
                                                    thead.thead-light 
                                                        tr 
                                                            th Username
                                                            th Email
                                                            th Status
                                                            th Action
                                                    tbody 
                                                        each admin in allAdmins
                                                            - let username = admin.username
                                                            - let email = admin.email
                                                            - let deleteUrl = "#"
                                                            tr 
                                                                td #{username}
                                                                td #{email}
                                                                td Online
                                                                td #[a(href=deleteUrl class="red-color") #[i.feather.icon-trash]]
                                else
                                    .card
                                        .card-header
                                            span.d-block.m-t-5 You are the only admin available.
        include includes/footer.pug