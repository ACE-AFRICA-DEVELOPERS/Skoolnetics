include includes/header.pug 
block content
    link(rel="stylesheet" href="/stylesheets/dashboard.css")
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    if classSchool
                                        .card-header
                                            h5 Lesson Notes
                                            span.d-block.m-t-5 Select the class lesson notes you want to see:
                                        .card-body
                                            .row
                                                each c in classSchool
                                                    .col-md-3.mb-3
                                                       - let classUrl = "/school/lesson-notes/" + c.name
                                                        a(href=classUrl class="text-dark")
                                                            .field-box
                                                                p #[b #{c.name}]
                                    else
                                        .card-header
                                            h5 Lesson Notes
                                            span.d-block.m-t-5 You don't have an active class yet.

        include includes/footer.pug