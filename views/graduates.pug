include includes/header.pug 
block content
    link(rel="stylesheet" href="/stylesheets/dashboard.css")
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                p #[a(href="/school/students/graduate" class="btn btn-info" id="submit") Graduate Students]
                                .card
                                    .card-header
                                        h5#title Graduated Students
                                    .card-body
                                        .row
                                            if students.length != 0
                                                each student in students
                                                    .col-md-3
                                                        a(href="/school/new-student/" + student._id class="text-dark box-field")
                                                            span #{student.firstName} #{student.lastName}
                                            else
                                                p.mb-0.mt-0 You have no graduated students.

        script(src="/javascripts/library/graduate.js" type="module")                        
        include includes/footer.pug