include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    if students.length > 0
                                        .card-header
                                            h5 #{title}

                                        .card-block.table-border-style
                                            .table-responsive
                                                table.table.table-striped
                                                    thead.thead-light
                                                        tr 
                                                            th S/N 
                                                            th Student ID
                                                            th Full Name
                                                            th Edit/View
                                                    tbody 
                                                        each student, index in students
                                                            - let name = `${student.lastName} ${student.firstName} ${student.otherName}`
                                                            - let regNo = student.studentID
                                                            - let viewUrl = "/school/new-student/" + student._id
                                                            tr 
                                                                td #{index + 1} 
                                                                td #{regNo}
                                                                td #{name}
                                                                td #[a(href=viewUrl class="main-link") View]

                                    else
                                        .card-header
                                            h5 #{title}
                                            span.d-block.m-t-5 No Student found.
        include includes/footer.pug