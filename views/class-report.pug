include includes/header.pug 
block content
    link(rel="stylesheet" href="/stylesheets/dashboard.css")
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                if results.length > 0
                                    if firstResult.released
                                        - let unReleaseUrl = '/school/report/' + exam.examCode + '/' + className + '/unrelease'
                                        a(href=unReleaseUrl class="btn btn-info") Unrelease the results
                                    else
                                        - let releaseUrl = '/school/report/' + exam.examCode + '/' + className + '/release'
                                        a(href=releaseUrl class="btn btn-info") Release results to Students
                                    .card
                                        .card-header
                                            h5 Result Analysis for #{className}
                                        .card-block.table-border-style
                                            .table-responsive
                                                table.table.table-striped
                                                    thead.thead-light
                                                        tr 
                                                            th Reg Number
                                                            th Name
                                                            each cls in firstResult.result
                                                                th #{cls.courseName}
                                                    tbody 
                                                        each result, index in results 
                                                            tr
                                                                td #{studentID[result.student]}
                                                                td #{studentName[result.student]}
                                                                    each res in result.result
                                                                        td #{res.score}
                                else
                                    .card
                                        .card-header
                                            h5 Result Analysis for #{className}
                                            span.d-block.m-t-5 Results for this class isn't available yet.


        include includes/footer.pug