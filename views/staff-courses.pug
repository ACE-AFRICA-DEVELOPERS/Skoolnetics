include includes/header.pug 
block content
    link(rel="stylesheet" href="/stylesheets/dashboard.css")
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    .card-header
                                        h5 School CBT
                                        span.d-block.m-t-5 Select a class:
                                    .card-body
                                        .row
                                            each teach in staff.teaching
                                                .col-md-4.mb-3
                                                    - let cbtUrl = '/staff/cbt/school/' + exam.examCode + '/' + teach.subject + '/' + teach.className
                                                    a(href=cbtUrl class="text-dark")
                                                        .field-box
                                                            p #[b #{teach.subject}]
                                                            p #{teach.className}
        include includes/footer.pug