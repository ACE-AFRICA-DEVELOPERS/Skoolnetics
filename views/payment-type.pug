include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                p #[a(href="#" data-toggle="modal" data-target="#addModal" class="btn btn-info") New Payment Type #[i(class="fa fa-plus ml-1")]]
                                .card
                                    .card-header
                                        h5 New Payment Type
                                        span.d-block.m-t-5 Click on New Payment Type button to set up a payment type for Students.

                                    div(class="modal fade" id="addModal" role="dialog" aria-hidden="true")
                                            div(class="modal-dialog" role="document")
                                                div(class="modal-content")
                                                    div(class="modal-header")
                                                        h5 Add a Payment Type
                                                        button(class="close" type="button" data-dismiss="modal" aria-label="Close")
                                                            span(aria-hidden="true") ×
                                                    div(class="modal-body")
                                                        form(method="post")
                                                            label(class="label") Payment Type : 
                                                            input(type="text" class="form-control mb-3" placeholder="Shool Fees" name="paymentFor" required)
                                            
                                                            div(class="text-center")
                                                                input(type="submit", value="Add" class="btn btn-info")
                                    .row.justify-content-center
                                        .col-md-8
                                            if error
                                                if error.length != 0
                                                    .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") ×
                                                        span #{error}

                                            if success
                                                if success.length != 0
                                                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") ×
                                                        span #{success}
                                    div(class="mt-2")
                                        .card
                                            //- .card-header
                                            h5.pl-4 Payments
                                            .card-block.table-border-style
                                                .table-responsive
                                                    table.table.table-striped
                                                        thead.thead-light
                                                            tr
                                                                th S/N
                                                                th Payment Type
                                                                th Delete
                                                        tbody
                                                            if paymentTypes.length > 0

                                                                each pay, index in paymentTypes
                                                                    - let viewUrl = "/school/single-payment/" + pay._id
                                                                    - let name = pay.paymentFor
                                                                    tr
                                                                        td #{index + 1}  
                                                                        td #{name}
                                                                        td #[a(href=viewUrl class="main-link") View]

        include includes/footer.pug