include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    .row.justify-content-center
                                        .col-md-8
                                            if error
                                                if error.length != 0
                                                    .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") ×
                                                        span #{error}

                                            if success
                                                if success.length != 0
                                                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") ×
                                                        span #{success}
                                    .card-header
                                        h5 Profile.
                                        span.d-block.m-t-5 Kindly select a class below to automatically generate a Bill.
                                .card
                                    div(class="col-md-10 pt-5")
                                        div(class="row")
                                            div(class="col-md-5")
                                                div(class="card")
                                                    if parent.profilePhoto
                                                        - let imageUrl = "/uploads/schools/" + code + "/parents/" + parent.profilePhoto
                                                        img(src=imageUrl alt="" width="100%" height="300px")
                                                    else
                                                        img(src="/images/default-avatar.png" alt="" width="100%" height="300px")
                                                    
                                            div(class="col-md-7")
                                                div(class="card-box")
                                                    .row
                                                        .col-3
                                                            label(for="ID" class="label") Parent ID:
                                                        .col-9
                                                            input(type="text" value= parent.parentID class="profile-form mb-4" readonly)
                                                        .col-3
                                                            label(for="name" class="label") Name:
                                                        .col-9
                                                            input(type="text" value= parent.name class="profile-form mb-4" name="name" readonly)
                                                        .col-3
                                                            label(for="ward" class="label") Child(ren):
                                                        each student, index in parent.ward
                                                            .col-9
                                                                input(type="text" value= oneStudent[student] class="profile-form mb-4" readonly)
                                                        .col-3
                                                            label(for="email" class="label") Email:
                                                        .col-9
                                                            input(type="email" value= parent.email class="profile-form mb-4" name="otherName" readonly)
                                                        .col-3
                                                            label(for="number" class="label") Number:
                                                        .col-9
                                                            input(type="tel" value= parent.number class="profile-form mb-4" name="number" readonly)
                                                        .col-3
                                                            label(for="gender" class="label") Role:
                                                        .col-9
                                                            input(type="text" value= parent.role class="profile-form mb-4" name="gender" readonly)
        include includes/footer.pug