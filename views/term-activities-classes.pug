include includes/header.pug 
block content
    link(rel="stylesheet" href="/stylesheets/dashboard.css")
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrappers
                                .card
                                    .card-header
                                        h5 #{session.name} | #{term.name} (Results)
                                        span.d-block.m-t-5 Please select a class.
                                    .card-body
                                        if classes
                                            .row
                                                each cls in classes
                                                    .col-md-3.mb-3
                                                        - let viewUrl = '/school/manage-sessions/' + session._id + '/' + term.name + '/results/' + cls.name
                                                        a(href=viewUrl class="text-dark")
                                                            .box-field
                                                                p #[b #{cls.name}]
                            
        include includes/footer.pug