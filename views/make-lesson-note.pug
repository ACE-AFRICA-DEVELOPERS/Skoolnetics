include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    div(class="card-header")
                                        h5 Create Note
                                    div(class="card-body")
                                        p #{message}
                                        form(method="post")
                                            .report-field
                                                .row
                                                    .col-md-4.mb-3
                                                        label Week
                                                        input(type="number", name="week" class="form-control")
                                                    .col-md-4.mb-3
                                                        label Date
                                                        input(type="date", name="date" class="form-control")
                                                    .col-md-4.mb-3
                                                        label Subject & Class
                                                        select(name="subject" class="form-control custom-select")
                                                            option(value="" selected disabled="disabled") ------
                                                            each st in staff.teaching 
                                                                option(value=st._id) #{st.subject} (#{st.className})
                                                    .col-md-6.mb-3
                                                        label Topic
                                                        input(type="text", name="topic" class="form-control")
                                                    .col-md-6.mb-3
                                                        label Material Used
                                                        input(type="text", name="materials" class="form-control")
                                                    .col-md-6.mb-3
                                                        label Content
                                                        input(type="text", name="contentTopic" class="form-control mb-3" placeholder="Content Topic")
                                                        textarea(name="contentDetail", cols="30", rows="10" class="form-control question-form" placeholder="Notes")
                                                    .col-md-6.mb-3
                                                        label Presentation
                                                        textarea(name="presentation", cols="30", rows="10" class="form-control mb-3")
                                                        label Conclusion
                                                        input(type="text", name="conclusion" class="form-control")
                                                    .col-md-6.mb-2
                                                        label Evaluation
                                                        textarea(name="evaluation", cols="30", rows="10" class="form-control")
                                                    .col-md-6.mb-3.text-right
                                                        button(type="submit").btn.btn-info.mt-3.pl-5.pr-5 Add Note

        script(type="text/javascript").
            tinymce.init({
                theme : "advanced",
                theme_advanced_toolbar_location : "top",
                theme_advanced_toolbar_align : "left",
                mode : "exact",
                selector : "teaxtarea"
            });
        script(type="text/javascript").
            tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
            });                                                                   
        include includes/footer.pug