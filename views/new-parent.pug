include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    .card-header
                                        h5 Add a New Parent
                                        p(class="font-itali") #[strong Note :] The surname of the Parent will be the default password. Parent ID will be automatically generated.

                                    .card-body
                                        .row
                                            .col-md-6
                                                if error
                                                    if error.length != 0
                                                        .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                                                            button.close(type="button" data-dismiss="alert" aria-label="close")
                                                                span(aria-hidden="true") Ã—
                                                            span #{error}
                                        .row.justify-content-center
                                            .col-md-8
                                                .form-field
                                                    form(method="POST")
                                                        div(class="row ")
                                                            div(class="col-md-6")
                                                                label Title :
                                                                select(class="form-control mb-3 custom-select" name="title")
                                                                    option(selected disabled="disabled") ------
                                                                    option(value="Mr") Mr
                                                                    option(value="Mrs") Mrs
                                                                    option(value="Miss") Miss
                                                            div(class="col-md-6")
                                                                label Surname :
                                                                input(type="text" class="form-control mb-3" name="surname")
                                                            div(class="col-md-6")
                                                                label Name(s) :
                                                                input(type="text" class="form-control mb-3" name="name")
                                                            div(class="col-md-6")
                                                                label Email :
                                                                input(type="email" class="form-control mb-3" name="email")
                                                            div(class="col-md-6")
                                                                label Mobile Number :
                                                                input(type="tel" class="form-control mb-3" name="number")
                                                            div(class="col-md-6")
                                                                label Relationship with child(ren) :
                                                                select(class="role form-control custom-select mb-3" name="relationship")
                                                                    option(value="" selected disabled="disabled") -------
                                                                    option(value="Father") Father
                                                                    option(value="Mother") Mother
                                                                    option(value="Guardian") Guardian
                                                            div(class="col-md-6")
                                                                label Child(ren) :
                                                                select(class="multiple-selecting form-control" multiple="multiple" name="ward")
                                                                    each student in students
                                                                        option(value=student._id) #{student.lastName} #{student.firstName} #{student.otherName} 
                                                                p.err-msg
                                                                
                                                            div(class="col-md-12 text-center")
                                                                button(type="submit" class="btn btn-info") Create
        
        include includes/footer.pug