include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    .card-header
                                        h5 Add a New Parent
                                        p(class="font-itali") #[strong Note :] The Email of the Parent will be the default password. Parent ID will be automatically generated.

                                    .card-body
                                        .row
                                            .col-md-6
                                                if error
                                                    if error.length != 0
                                                        .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                                                            button.close(type="button" data-dismiss="alert" aria-label="close")
                                                                span(aria-hidden="true") Ã—
                                                            span #{error}
                                        .row.justify-content-center
                                            .col-md-8
                                                .form-field
                                                    form(method="POST")
                                                        div(class="row ")
                                                            div(class="col-md-4")
                                                                label(class="label") Name :
                                                                input(type="text" class="form-control mb-3" name="name")
                                                            div(class="col-md-4")
                                                                label(class="label") Email :
                                                                input(type="email" class="form-control mb-3" name="email")
                                                            div(class="col-md-4")
                                                                label(class="label") Mobile Number :
                                                                input(type="tel" class="form-control mb-3" name="number")
                                                            div(class="col-md-4")
                                                                label(class="label") Gender :
                                                                select(class="form-control custom-select mb-3" name="gender")
                                                                    option(value="" selected disabled="disabled") ---------
                                                                    option(value="male") Male
                                                                    option(value="female") Female
                                                            div(class="col-md-4")
                                                                label(class="label") Role :
                                                                select(class="role form-control custom-select mb-3" name="role")
                                                                    option(value="" selected disabled="disabled") ---------
                                                                    option(value="father") Father
                                                                    option(value="mother") Mother
                                                            div(class="col-md-4")
                                                                label(for="wards" class="label") Child(ren) :
                                                                select(class="form-control mb-3 multiple-select" name="ward" id="confirmParent" multiple size="3")
                                                                    each student in students
                                                                        option(value=student._id) #{student.firstName} #{student.lastName}
                                                                p.err-msg
                                                                
                                                            div(class="col-md-12 text-center")
                                                                button(type="submit" class="btn btn-info") Continue
        include includes/footer.pug