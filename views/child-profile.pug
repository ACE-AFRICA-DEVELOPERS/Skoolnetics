include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug 
        include includes/usernav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                .card
                                    div(class="container mt-2")
                                        div(class="row justify-content-center")
                                            div(class="col-md-10")
                                                div(class="row")
                                                    div(class="col-md-5")
                                                        div(class="card")
                                                            if studentDB.profilePhoto
                                                                - let imageUrl = "/uploads/schools/" + schoolAdmins.schoolCode + '/' + studentClass.name + '/' + studentDB.profilePhoto
                                                                img(src=imageUrl alt="" width="100%" height="300px")
                                                            else
                                                                img(src="/images/default-avatar.png" alt="" width="100%" height="300px")
                                                                
                                                    div(class="col-md-7 mt-3")
                                                        div(class="card-box")
                                                            .row
                                                                .col-3
                                                                    label(for="ID" class="label") Student ID:
                                                                .col-9
                                                                    input(type="text" value= studentDB.studentID class="profile-form mb-4" readonly)
                                                                .col-3
                                                                    label(for="class" class="label") Class:
                                                                .col-9
                                                                    input(type="text" value= studentClass.name class="profile-form mb-4" readonly)
                                                                .col-3
                                                                    label(for="firstname" class="label") First Name:
                                                                .col-9
                                                                    input(type="text" value= studentDB.firstName class="profile-form mb-4" name="firstName" readonly)
                                                                .col-3
                                                                    label(for="lastname" class="label") Last Name:
                                                                .col-9
                                                                    input(type="text" value= studentDB.lastName class="profile-form mb-4" name="lastName" readonly)
                                                                .col-3
                                                                    label(for="pthername" class="label") Other Name:
                                                                .col-9
                                                                    input(type="text" value= studentDB.otherName class="profile-form mb-4" name="otherName" readonly)
                                                                .col-3
                                                                    label(for="gender" class="label") Gender:
                                                                .col-9
                                                                    input(type="text" value= studentDB.gender class="profile-form mb-4" name="gender" readonly)
                                                                .col-3
                                                                    label(for="dateOfBirth" class="label") Date of Birth:
                                                                .col-9
                                                                    - let age = studentDB.dateOfBirth.getDate() + "/" + (studentDB.dateOfBirth.getMonth() + 1) + "/" + studentDB.dateOfBirth.getFullYear()
                                                                    input(type="text" value=age class="profile-form mb-4" readonly)
                                                                .col-3
                                                                    label(for="pNumber" class="label") Parent's No:
                                                                .col-9
                                                                    input(type="text" value= studentDB.parentsNumber class="profile-form mb-4" name="pNumber" readonly)

                                                div(class="row mt-3")
                                                    div(class="table-responsive text-center card")
                                                        table(class="table table-bordered" id="dataTable")
                                                            thead.thead-light 
                                                                tr
                                                                    th Activities
                                                            tbody
                                                                - let assignmentUrl = "/parent/assignment"

                                                                - let feesUrl = "/parent/new-student/" + validStudent._id + "/child-fees"
                                                                tr
                                                                    td 
                                                                        p #[a(href="#" class="main-link") Attendance]
                                                                        p #[a(href=assignmentUrl class="main-link") Assignments]
                                                                        p #[a(href="#" class="main-link") Report Card]
                                                                        p #[a(href=feesUrl class="main-link") Financial Records]

        include includes/footer.pug